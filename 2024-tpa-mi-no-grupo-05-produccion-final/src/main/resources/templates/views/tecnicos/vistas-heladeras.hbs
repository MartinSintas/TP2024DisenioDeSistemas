{{> templates/base }}
{{#block "contenido"}}
    <section class="container my-5">
        <div class="row">
            <div class="col-12">
                <h2 class="text-center text-primary mb-4">Visitas a Heladeras</h2>
                {{#if visitas}}
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>ID</th>
                                <th>Comentario</th>
                                <th>Estado de Falla Técnica</th>
                                <th>Foto</th>
                                <th>Horario de Visita</th>
                                <th>ID del Incidente</th>
                                <th>Heladera</th>
                                <th>Dirección</th>
                                <th>ID Técnico</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each visitas}}
                                <tr>
                                    <td>{{this.id}}</td>
                                    <td>{{this.comentario}}</td>
                                    <td>{{this.estadoFallaTecnica}}</td>
                                    <td>
                                        {{#if foto}}
                                            <img src="imagenes/{{this.foto}}" alt="Foto de la visita" class="img-fluid" style="max-width: 100px;">
                                        {{else}}
                                            No disponible
                                        {{/if}}
                                    </td>
                                    <td>{{this.horarioDeVisita}}</td>
                                    <td>{{this.id_incidente}}</td>
                                    <td>{{this.heladera.nombreSignificativo}}</td>
                                    <td>{{this.heladera.direccion}}</td>
                                    <td>{{this.tecnico.cuil}}</td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                {{else}}
                    <div class="alert alert-info text-center" role="alert">
                        No hay visitas registradas por el momento.
                    </div>
                {{/if}}
            </div>
        </div>
    </section>
{{/block}}

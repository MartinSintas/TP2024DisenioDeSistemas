{{> templates/base }}
{{#block "contenido"}}
    <section class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card border-success">
                    <div class="card-body text-center">
                        <h2 class="card-title text-success mb-4">¡Donación Exitosa!</h2>
                        <div class="mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor"
                                 class="bi bi-check-circle-fill text-success" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                            </svg>
                        </div>
                        <p class="card-text">Gracias por tu generosa contribución. Tu donación ha sido procesada con
                            éxito.</p>

                        <div class="mt-4">
                            <h5>Detalles de la Donación:</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <strong>Monto:</strong> ${{monto}}
                                </li>
                                <li class="list-group-item">
                                    <strong>Tipo de Donación:</strong>
                                    {{#if recurrente}}
                                        Recurrente (Cada {{diasParaRepetir}} días)
                                    {{else}}
                                        Única vez
                                    {{/if}}
                                </li>
                            </ul>
                        </div>

                        {{#if recurrente}}
                            <div class="alert alert-info mt-4" role="alert">
                                <i class="bi bi-info-circle-fill"></i>
                                Tu donación se repetirá automáticamente cada {{diasParaRepetir}} días. Puedes cancelar o
                                modificar esta donación recurrente en cualquier momento desde tu perfil.
                            </div>
                        {{/if}}

                        <div class="mt-4">
                            <a href="/" class="btn btn-primary">Volver al Inicio</a>
                            <a href="/mis-donaciones" class="btn btn-outline-secondary">Ver Mis Donaciones</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{{/block}}
{{> templates/base}}

{{#block "contenido"}}
    <div class="container">
        <h1 class="mt-5 mb-4">Lista de Reportes Disponibles</h1>
        <p>A continuación se muestran los reportes disponibles para su descarga:</p>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Nombre del Reporte</th>
                <th>Acción</th>
            </tr>
            </thead>
            <tbody>
            {{#each reportes}}
                <tr>
                    <td>{{this}}</td> <!-- Mostramos el nombre del reporte -->
                    <td>
                        <a href="/reportes/descargar/{{this}}" class="btn btn-primary">Descargar</a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>

        {{#if reportes.length}}
            <p class="mt-3">Haz clic en el nombre del reporte o en "Descargar" para obtener el archivo.</p>
        {{else}}
            <p class="text-danger">No hay reportes disponibles en este momento.</p>
        {{/if}}
    </div>
{{/block}}


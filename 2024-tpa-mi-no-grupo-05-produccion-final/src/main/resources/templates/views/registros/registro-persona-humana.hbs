{{> templates/base}}
{{#block "contenido"}}
    <section class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title mb-4">Registro de Persona Humana</h2>
                        <form action="/registro/persona-humana" method="POST">
                            <div class="mb-3">
                                <label for="usuario" class="form-label">Usuario *</label>
                                <input type="text" class="form-control" id="usuario" name="usuario" required>
                            </div>
                            <div class="mb-3">
                                <label for="contrasena" class="form-label">Contraseña *</label>
                                <input type="password" class="form-control" id="contrasena" name="contrasena" required>
                            </div>
                            <div class="mb-3">
                                <label for="nombre" class="form-label">Nombre *</label>
                                <input type="text" class="form-control" id="nombre" name="nombre" required>
                            </div>
                            <div class="mb-3">
                                <label for="apellido" class="form-label">Apellido *</label>
                                <input type="text" class="form-control" id="apellido" name="apellido" required>
                            </div>
                            <div class="mb-3">
                                <label for="tipoDocumento" class="form-label">Tipo de Documento *</label>
                                <select class="form-select" id="tipoDocumento" name="tipoDocumento" required>
                                    <option value="">Seleccione un tipo de documento</option>
                                    <option value="DNI">DNI</option>
                                    <option value="LE">LE</option>
                                    <option value="LC">LC</option>
                                    <option value="PASAPORTE">Pasaporte</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="numeroDocumento" class="form-label">Número de Documento *</label>
                                <input type="text" class="form-control" id="numeroDocumento" name="numeroDocumento"
                                       required>
                            </div>
                            <div class="mb-3">
                                <label for="medioContacto" class="form-label">Medio de Contacto *</label>
                                <select class="form-select" id="medioContacto" name="medioContacto" required>
                                    <option value="">Seleccione un medio de contacto</option>
                                    <option value="EMAIL">Correo Electrónico</option>
                                    <option value="TELEGRAM">Telegram</option>
                                    <option value="WHATSAPP">WhatsApp</option>
                                </select>
                            </div>
                            <div class="mb-3" id="contactoValorContainer">
                                <!-- El campo de entrada para el valor del contacto se generará dinámicamente aquí -->
                            </div>
                            <div class="mb-3">
                                <label for="fechaNacimiento" class="form-label">Fecha de Nacimiento (opcional)</label>
                                <input type="date" class="form-control" id="fechaNacimiento" name="fechaNacimiento">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Dirección (opcional)</label>
                                <div id="map" style="height: 300px; width: 100%;"></div>
                            </div>
                            <div class="mb-3">
                                <label for="latitude" class="form-label">Latitud</label>
                                <input type="text" class="form-control" id="latitude" name="latitude" readonly>
                            </div>
                            <div class="mb-3">
                                <label for="longitude" class="form-label">Longitud</label>
                                <input type="text" class="form-control" id="longitude" name="longitude" readonly>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Formas de Colaborar *</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="DONAR_VIANDAS"
                                           id="donarViandas" name="formasColaborar">
                                    <label class="form-check-label" for="donarViandas">
                                        Donar Viandas
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="DONAR_DINERO"
                                           id="donarDinero" name="formasColaborar">
                                    <label class="form-check-label" for="donarDinero">
                                        Donar Dinero
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="REGISTRAR_PERSONA_VULNERABLE"
                                           id="registrarPersona" name="formasColaborar">
                                    <label class="form-check-label" for="registrarPersona">
                                        Registrar Persona Vulnerable
                                    </label>
                                </div>
                            </div>
                            {{#if enunciados.length}}
                                {{#each enunciados}}
                                    <div class="mb-3">
                                        <label for="{{this.name}}" class="form-label">{{this.enunciado}}</label>
                                        <input type="text" class="form-control" id="{{this.name}}" name="{{this.name}}" required>
                                    </div>
                                {{/each}}
                            {{/if}}
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Registrarse</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

